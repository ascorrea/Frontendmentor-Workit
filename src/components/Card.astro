---
interface Props {
  number: string;
  title: string;
  body: string;
}

const { number, title, body } = Astro.props;
---

<div class="card">
  <div class="card__number">
    {number}
  </div>
  <div class="card__content">
    <h3 class="card__h3">
      {title}
    </h3>
    <p class="card__p">
      {body}
    </p>
  </div>
</div>

<style>
  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 22.0456rem;
    text-align: center;

    .card__content {
      width: 100%;
      display: flex;
      flex-direction: column;
    }
    .card__number {
      width: 3.48744rem;
      height: 3.5rem;
      border-radius: 50%;
      border: 1px solid var(--davys-grey);
      color: var(--dark-purple);
      font-family: var(--font-title);
      font-weight: var(--weight-title);
      line-height: 3.5rem;
      font-size: 1.5rem;
    }

    .card__h3 {
      margin: 3.5rem 0 1.75rem;
    }
  }

  @media (max-width: 768px) {
    .card {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: center;
      width: 35.8125rem;
      gap: 2rem;

      .card__content {
        text-align: left;
        width: 30.8125rem;
        margin-left: 2rem;
      }

      .card__number {
        width: 48px;
        height: 2.875rem;
        line-height: 2.875rem;
        font-size: 1.25rem;
      }

      .card__h3 {
        margin: 0 0 16px 0;
      }
    }
  }

  @media (max-width: 480px) {
    .card {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 21.4375rem;

      .card__content {
        width: 100%;
        display: flex;
        flex-direction: column;
        margin-left: 0;
        text-align: center;
      }
      .card__number {
        width: 3.48744rem;
        height: 3.5rem;
        line-height: 3.5rem;
      }

      .card__h3 {
        margin: 24px 0 16px;
      }
    }
  }
</style>
